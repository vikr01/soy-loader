{
	"name": "soy-loader",
	"description": "soy (google closure) template loader for webpack",
	"license": "MIT",
	"author": "Ben Duncan @bendman",
	"homepage": "https://github.com/bendman/soy-loader",
	"repository": {
		"type": "git",
		"url": "https://bendman@github.com/bendman/soy-loader.git"
	},
	"bugs": {
		"url": "https://github.com/bendman/soy-loader/issues"
	},
	"version": "0.3.0",
	"main": "dist/index.js",
	"scripts": {
		"build": "cross-env NODE_ENV=production babel './src/**/*.js' --out-dir './dist' --copy-files",
		"lint": "eslint './**/*.js'",
		"lint-fix": "yarn run lint --fix",
		"test": "yarn run lint && : #more tests go here"
	},
	"dependencies": {
		"closure-templates": "^20160825.0.0",
		"exports-loader": "^0.6.2",
		"loader-utils": "^0.2.7",
		"rimraf": "^2.3.4",
		"soynode": "^2.1.0"
	},
	"peerDependencies": {
		"exports-loader": "^0.6.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.0.0-rc.2",
		"@babel/plugin-proposal-object-rest-spread": "^7.0.0-rc.2",
		"@babel/preset-env": "^7.0.0-rc.2",
		"@babel/preset-flow": "^7.0.0-rc.2",
		"babel-eslint": "^8.2.6",
		"babel-plugin-add-module-exports": "^0.2.1",
		"babel-plugin-dynamic-import-node": "^2.0.0",
		"babel-plugin-flow-runtime": "^0.17.0",
		"babel-plugin-minify-constant-folding": "^0.4.3",
		"babel-plugin-minify-dead-code-elimination": "^0.4.3",
		"babel-plugin-minify-guarded-expressions": "^0.4.3",
		"babel-plugin-transform-inline-environment-variables": "^0.4.3",
		"concurrently": "^3.6.1",
		"cross-env": "^5.2.0",
		"eslint": "^5.0.0-rc.0",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-config-prettier": "^3.0.1",
		"eslint-plugin-babel": "^5.1.0",
		"eslint-plugin-flowtype": "^2.50.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-promise": "^4.0.0",
		"flow-runtime": "^0.17.0",
		"husky": "^1.0.0-rc.13",
		"lint-staged": "^7.2.2",
		"mocha": "^5.2.0",
		"node-libs-browser": "^0.5.0",
		"prettier": "^1.14.2",
		"prettier-package-json": "^2.0.0",
		"webpack": "^4.17.1",
		"yarn": "^1.9.4"
	},
	"keywords": ["closure", "loader", "soy", "template", "webpack"],
	"devEngines": {
		"node": ">=8",
		"yarn": ">=1.9.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"linters": {
			"*.{js,jsx}": [
				"eslint --fix",
				"prettier --ignore-path .eslintignore --write",
				"git add"
			],
			"{*.json,.{babelrc,eslintrc,prettierrc}}": [
				"prettier --ignore-path .eslintignore --parser json --write",
				"git add"
			],
			"*.{css,scss}": [
				"prettier --ignore-path .eslintignore --write",
				"git add"
			],
			"*.{yml,less,md}": [
				"prettier --ignore-path .eslintignore --write",
				"git add"
			],
			"package.json": ["prettier-package-json --write", "git add"]
		}
	}
}
